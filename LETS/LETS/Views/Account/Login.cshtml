@using LETS.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
    var registered = TempData["Registered"]?.ToString() ?? "";
}
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "login", name = "form", novalidate = "" }))
{
    @Html.AntiForgeryToken()
    <div class="form-body">
        <h3 class="form-section">Login</h3>

        <hr />
        
        <div class="alert alert-success @(string.IsNullOrEmpty(registered) ? "hide" : "")">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>@registered</strong>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    @Html.EditorFor(m => m.UserName, "Text", new { label = "Username", @class = "col-xs-12", @required_message = "Please enter your username.", @placeholder = "Username" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.ActionLink("Forgot your username?", "ForgotUsername", new { controller = "Account" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    @Html.EditorFor(m => m.Password, "Password", new { label = "Password", @class = "col-xs-12", @required_message = "Please enter your password.", @placeholder = "Password" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.ActionLink("Forgot your password?", "ForgotPassword", new { controller = "Account" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                        Submit
                    </button>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-6 mdl-typography--text-center">
                    <h5>@Html.ActionLink("No account yet? Create one", "Register", new { controller = "Account" } , new { @class = "mdl-color-text--orange-A700" })</h5>
                </div>
            </div>
        </div>
    </div>
}