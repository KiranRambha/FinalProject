@using System.Web.UI.WebControls
@using LETS.Models
@model LetsUser
<div class="form-body">
    <h4 class="form-section"><i class="fa fa-user fa-fw" aria-hidden="true"></i> Account Settings</h4>
    <ul class="nav nav-tabs nav-justified">
        <li class="active">
            <a href="#user_panel" data-toggle="tab" aria-expanded="true">Personal Info</a>
        </li>
        <li class="">
            <a href="#user_skills_panel" data-toggle="tab" aria-expanded="false">Skills & Talents</a>
        </li>
        <li class="">
            <a href="#change_password_panel" data-toggle="tab" aria-expanded="false">Change Password</a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active fade in" id="user_panel">
            <div class="user_details_table table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th scope="row"><p>@Html.DisplayNameFor(model => model.UserPersonalDetails.About.Title) :</p></th>
                            <td><label>@Html.DisplayFor(model => model.UserPersonalDetails.About.Title)</label></td>
                        </tr>
                        <tr>
                            <th scope="row"><p>@Html.DisplayNameFor(model => model.UserPersonalDetails.About.FirstName) :</p></th>
                            <td><label>@Html.DisplayFor(model => model.UserPersonalDetails.About.FirstName)</label></td>
                        </tr>
                        <tr>
                            <th scope="row"><p>@Html.DisplayNameFor(model => model.UserPersonalDetails.About.LastName) :</p></th>
                            <td><label>@Html.DisplayFor(model => model.UserPersonalDetails.About.LastName)</label></td>
                        </tr>

                        <tr>
                            <th scope="row"><p>@Html.DisplayNameFor(model => model.UserPersonalDetails.About.Gender) :</p></th>
                            <td><label>@Html.DisplayFor(model => model.UserPersonalDetails.About.Gender)</label></td>
                        </tr>
                        <tr>
                            <th scope="row"><p>@Html.DisplayNameFor(model => model.UserPersonalDetails.Account.UserName) :</p></th>
                            <td><label>@Html.DisplayFor(model => model.UserPersonalDetails.Account.UserName)</label></td>
                        </tr>
                        <tr>
                            <th scope="row"><p>@Html.DisplayNameFor(model => model.UserPersonalDetails.Account.Email) :</p></th>
                            <td><label>@Model.UserPersonalDetails.Account.Email</label></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div id="account_settings_edit_button" class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" onclick="return AccountSettings();">
                            <i class="fa fa-pencil fa-fw" aria-hidden="true"></i> Edit Personal Info
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="user_skills_panel">
            <div class="user_skills_list">
                @if (Model.UserTradingDetails.Skills != null && Model.UserTradingDetails.Skills.Count > 0)
                {
                    foreach (var skill in Model.UserTradingDetails.Skills)
                    {
                        if (!string.IsNullOrEmpty(skill))
                        {
                            <div class="user_skill alert alert-success" role="alert">
                                <strong>@skill</strong>
                            </div>
                        }
                    }
                }
                else
                {
                    <div class="no_user_skills alert alert-warning" role="alert">
                        <strong>You haven't added any skills to your profile.</strong>
                    </div>
                }
            </div>
            <div id="user_skills_list_edit_button" class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" onclick="return SkillsSettings();">
                            <i class="fa fa-pencil fa-fw" aria-hidden="true"></i> Add/Edit Skills
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="change_password_panel">
            @Html.Partial("ChangePassword", new RegisterUserViewModel())
        </div>
</div>
</div>