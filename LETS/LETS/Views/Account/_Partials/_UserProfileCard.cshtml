@using LETS.Models
@model LetsUser
<div class="userinfo">
    <div class="userprofile mid" data-toggle="modal" data-target="#ChangeProfilePictureModal">
        <label class="picture-edit"><i class="fa fa-camera fa-fw" aria-hidden="true"></i> Edit</label>
    </div>
    @Html.Partial("_Partials/_ChangeProfilePicture")
    <h4 class="username" >@Model.UserPersonalDetails.About.FirstName @Model.UserPersonalDetails.About.LastName</h4>
    <h5 class="useraccountbalance"><i class="fa fa-diamond fa-fw" aria-hidden="true"></i> @Model.UserTradingDetails.Credit</h5>
</div>
<div class="usermenu">
    <ul class="nav">
        <li class="account_overview_toggle active">
            <a href="#account_overview_view" data-toggle="tab" aria-expanded="true">
                <i class="fa fa-home fa-fw" aria-hidden="true"></i> Overview
            </a>
        </li>
        <li class="account_settings_toggle">
            <a href="#account_settings_view" data-toggle="tab" aria-expanded="false">
                <i class="fa fa-cog fa-fw" aria-hidden="true"></i> Account Settings
            </a>
        </li>
    </ul>
</div>