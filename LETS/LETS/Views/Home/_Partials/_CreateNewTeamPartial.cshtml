@using LETS.Models
@model TeamManagement

<div id="CreateNewTeamModal" class="modal fade" role="dialog" data-backdrop="static">
    @using (Html.BeginForm("CreateTeamRequest", "Home", FormMethod.Post, new { id = "create_team", name = "form", novalidate = "" }))
    {
        @Html.AntiForgeryToken()
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" onclick="return CloseNewRequest();">&times;</button>
                    <h4 class="modal-title">Create a New Request</h4>
                </div>
                <div class="modal-body">
                    <fieldset>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    @Html.EditorFor(m => m.TeamName, "Text", new { label = "What the title of the request?", @class = "col-xs-12", @required_message = "Please select a title for your request", @placeholder = "Title of the request" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    @Html.EditorFor(m => m.TeamDescription, "TextArea", new { label = "What the title of the request?", @class = "col-xs-12", @required_message = "Please select a title for your request", @placeholder = "Title of the request" })
                                </div>
                            </div>
                        </div>
                        <div class="form-groups">
                            <div class="row">
                                <div class="col-xs-8">
                                    @Html.EditorFor(m => m.Username, "TypeAhead", new { label = "Search LETS", @class = "col-xs-12", @placeholder = "UserName" })
                                </div>
                                <div class="col-xs-4 add_user">
                                    <button type="button" class="mdl-button mdl-typography--button-color-contrast mdl-button--accent mdl-js-button mdl-button--raised" onclick="return AddUser()">
                                        <i class="fa fa-plus fa-fw" aria-hidden="true"></i> Add
                                    </button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 added-team-members-list">
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="modal-footer">
                    <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary" data-dismiss="modal" onclick="return CloseNewRequest();">
                        <i class="fa fa-times" aria-hidden="true"></i> Close
                    </button>
                    <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                        <i class="fa fa-paper-plane" aria-hidden="true"></i> Post
                    </button>
                </div>
            </div>
        </div>
    }
</div>